select * from small_singapore_restaurants restaurants, osm_2po_4pgr
where restaurants.way = '0101000020E6100000EC2B14763AF25940BB8A53D1A6B2F43F'
order by ST_Distance(restaurants.way, osm_2po_4pgr.geom_way)
limit 1
