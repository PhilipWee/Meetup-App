-----------------------------------------Combining the mrt, bus and walking maps------------------
#Create the table
CREATE TABLE public_edges (id SERIAL, source bigint, target bigint, cost double precision, reverse_cost double precision, x1 double precision, y1 double precision,x2 double precision,y2 double precision, PRIMARY KEY(id));

#For walking routes
insert into public_edges (source,target,cost,reverse_cost,x1,y1,x2,y2)
SELECT  osm_source_id as source, osm_target_id as target, cost*kmh/5 as cost, reverse_cost*kmh/5 as reverse_cost,x1,y1,x2,y2 FROM osm_2po_4pgr where clazz!=11


#For bus routes
insert into public_edges (source,target,cost,reverse_cost,x1,y1,x2,y2)
SELECT osm_source_id as source, osm_target_id as target, cost, reverse_cost,x1,y1,x2,y2 FROM bus_routes_locations

#For mrt routes
insert into public_edges (source,target,cost,reverse_cost,x1,y1,x2,y2)
SELECT osm_source_id as source, osm_target_id as target, "Time" as cost, "Time" as reverse_cost, "Longitude_Start" as x1,"Latitude_Start" as y1,"Longitude_End" as x2,"Latitude_End" as y2 FROM mrt_map_edges